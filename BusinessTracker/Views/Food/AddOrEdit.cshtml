@model BusinessTracker.Models.Food

@{
    ViewData["PageTitle"] = Model.FoodId == 0 ? "Crear nuevo platillo" : "Editar platillo";
}


<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#212b36">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="FoodId" value="@Model.FoodId" />
                <div class="mb-3">
                    <div class='e-btn-group custom-rbt-group'>
                        <input type="radio" id="radioleft" name="Type" value="Gasto" checked="@(Model.Type=="Expense")" />
                        <label class="e-btn" for="radioleft">Gasto</label>
                        <input type="radio" id="radiomiddle" name="Type" value="Ingreso" checked="@(Model.Type=="Income")" />
                        <label class="e-btn" for="radiomiddle">Ingreso</label>
                    </div>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="title" placeholder="Nombre" ejs-for="Title" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="icon" placeholder="Ícono" ejs-for="Icon" floatLabelType="Always"></ejs-textbox>
                </div>
                <ejs-button id="submit" type="submit" content="Registrar" cssClass="e-success"></ejs-button>
            </form>
        </div>


    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>


